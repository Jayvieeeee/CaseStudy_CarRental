@model CarRental.Models.ForgotPasswordViewModel

@{
    Layout = null;
    ViewData["Title"] = "ForgotPassword";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>DM Online Car Rental</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/forgotpass.css" />
</head>
<body>
    <div class="left-section">
        <img src="~/images/logo.png" alt="Company Logo">
        <h1>DM Online Car Rental</h1>
        <button class="learn-more">Learn More</button>
    </div>

    <img src="~/images/car.png" alt="Car">

    <div class="right-section">
        <div class="nav-bar">
            <a asp-controller="Home" asp-action="Index">Home</a>
            <a href="/Home/Index#about">About Us</a>
            <a href="/Home/Index#contact">Contact</a>
            <a asp-controller="Account" asp-action="Login">Login</a>
        </div>

        <!-- Added Forgot Password Info -->
      

        <div class="forgot-password--box">
            <h2 class="forgot-password-title">Forgot Password</h2>

            <p class="forgot-password-info">
                You forgot your password? Here you can easily get a new password.
            </p>

            <form asp-action="ForgotPassword" method="post">
                <div class="input-container">
                    <input asp-for="Email" type="text" placeholder="Email" required>

                </div>

                <button type="submit">Continue</button>
            </form>

            @if (ViewData.ModelState["Email"]?.Errors.Count > 0)
            {
                <p class="text-danger">@ViewData.ModelState["Email"].Errors[0].ErrorMessage</p>
            }
            @if (ViewBag.SuccessMessage != null)
            {
                <p class="text-success">@ViewBag.SuccessMessage</p>
            }


        </div>
    </div>

    @section Scripts {
        @await Html.PartialAsync("_ValidationScriptsPartial")
    }
</body>
</html>
