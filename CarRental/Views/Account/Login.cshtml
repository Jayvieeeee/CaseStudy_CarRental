@model CarRental.Models.LoginViewModel

@{
    Layout = null;
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>DM Online Car Rental</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/login.css" />
</head>
<body>
    <div class="left-section">
        <img src="~/images/logo.png" alt="Company Logo">
        <h1>DM Online Car Rental</h1>
        <button class="learn-more">Learn More</button>
    </div>

    <img src="~/images/car-removebg-preview.png" alt="Car">

    <div class="right-section">
        <div class="nav-bar">
            <a asp-controller="Home" asp-action="Index">Home</a>
            <a asp-controller="Home" asp-action="About">About Us</a>
            <a asp-controller="Home" asp-action="Contact">Contact</a>
            <a asp-controller="Account" asp-action="Login">Login</a>
        </div>

        <div class="login-box">
            <h2>LOGIN</h2>

            <form asp-action="Login" method="post">
                <div class="input-container">
                    <input asp-for="UsernameOrEmail" type="text" placeholder="Username or Email" required>
                    <span asp-validation-for="UsernameOrEmail" class="text-danger"></span>
                </div>
                <div class="input-container">
                    <input asp-for="Password" type="password" placeholder="Password" required>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <button type="submit">Login</button>
            </form>

            <p class="signup-text">
                Don’t have an account?
                <a asp-controller="Account" asp-action="Signup">Sign Up</a>
            </p>

            @if (!ViewData.ModelState.IsValid)
            {
                <p class="text-danger">Invalid username/email or password.</p>
            }
        </div>
    </div>

    @section Scripts {
        @await Html.PartialAsync("_ValidationScriptsPartial")
    }
</body>
</html>




