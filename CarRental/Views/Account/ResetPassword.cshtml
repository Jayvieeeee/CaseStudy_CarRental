@model CarRental.Models.ResetPasswordViewModel

@{
    ViewData["Title"] = "Reset Password";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reset Password - DM Online Car Rental</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/forgotpass.css" />
</head>
<body>
    <div class="reset-password-container">
        <h2 class="reset-password-title">Reset Password</h2>

        <p class="reset-password-info">
            Enter your new password below.
        </p>

        <form asp-action="ResetPassword" method="post">
            <input type="hidden" asp-for="Email" value="@TempData["Email"]" />

            <div class="input-container">
                <label for="new-password">New Password</label>
                <input asp-for="NewPassword" type="password" id="new-password" placeholder="Enter new password" required />
            </div>

            <button type="submit" class="reset-btn">Reset Password</button>
        </form>

        @if (ViewBag.ErrorMessage != null)
        {
            <p class="text-danger">@ViewBag.ErrorMessage</p>
        }
    </div>

    @section Scripts {
        @await Html.PartialAsync("_ValidationScriptsPartial")
    }
</body>
</html>
