        @{
            Layout = null;
            ViewData["Title"] = "Home Page";
        }

        <!DOCTYPE html>
        <html lang="en">
        <head>
            <meta charset="UTF-8">
            <meta name="viewport" content="width=device-width, initial-scale=1.0">
            <title>Car Rental</title>
            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css">
            <link rel="stylesheet" href="~/css/style.css">
        </head>
        <body>
            <!--HEADER / NAVBAR-->
            <header>
                <nav class="navbar section-content">
                    <a href="#" class="nav-logo">
                        <h2 class="logo-text">Car Rental</h2>
                    </a>
                    <ul class="nav-menu">
                        <button id="menu-close-button" class="fas fa-times"></button>

                        <li class="nav-item">
                            <a href="#home" class="nav-link">Home</a>
                        </li>
                        <li class="nav-item">
                            <a href="#about" class="nav-link">About Us</a>
                        </li>
                        <li class="nav-item">
                            <a href="#" class="nav-link">View Cars</a>
                        </li>
                        <li class="nav-item">
                            <a href="#contact" class="nav-link">Contact Us</a>
                        </li>
                        <li class="nav-item">
                            <a href="#login" class="nav-link">Login</a>
                        </li>
                    </ul>

                    <button id="menu-open-button" class="fas fa-bars"></button>
                </nav>
            </header>

            <main>
                <!--HERO SECTION-->
                <section class="hero-section" id="home">
                    <div class="section-content">
                        <div class="hero-details">
                            <h2 class="title">RENT & GO!</h2>
                            <h3 class="subtitle">DM ONLINE CAR RENTAL</h3>
                            <p class="description">
                                Your Ride, Your Way – RENT Now!
                                Your go-to car rental service for every journey!
                                From daily drives to special trips, we offer a wide
                                range of reliable and affordable vehicles. Book with ease today!
                            </p>
                            <div class="buttons">
                                <a href="#" class="button rent">RENT</a>
                                <a href="#" class="button see-more">SEE MORE</a>
                            </div>
                        </div>
                        <div class="hero-image">
                            <img src="~/images/car.png" alt="Car">
                        </div>
                    </div>
                </section>

                <!--ABOUT US-->
                <section class="about-section" id="about">
                    <div class="section-content">
                        <div class="about-text">
                            <div class="about-section-title">
                                <h2>ABOUT US</h2>
                            </div>
                            <p>
                                Welcome to <strong>DM Car Online Rental</strong>, your trusted partner for hassle-free and reliable car rentals. Whether you're traveling for business, leisure, or just need a ride for the day, we are committed to providing you with top-quality vehicles at affordable rates.
                            </p>
                            <p>
                                <strong>Who We Are:</strong> DM Cars is dedicated to offering a seamless and enjoyable car rental experience. With a fleet of well-maintained vehicles ranging from compact cars to spacious SUVs, we ensure that you find the perfect ride for your needs. Our team is passionate about customer satisfaction and always ready to assist you.
                            </p>
                            <h3>Why Choose Us?</h3>
                            <ul>
                                <li><strong>Affordable Rates:</strong> Get competitive pricing without hidden fees.</li>
                                <li><strong>Variety of Vehicles:</strong> Choose from a diverse selection of cars to suit your preference.</li>
                                <li><strong>Easy Booking Process:</strong> Rent a car in just a few simple steps.</li>
                                <li><strong>Reliable Service:</strong> Well-maintained vehicles to ensure your safety and comfort.</li>
                                <li><strong>Customer Support:</strong> Our friendly team is available to assist you anytime.</li>
                            </ul>
                        </div>
                        <div class="about-image">
                            <img src="~/images/car.png" alt="Red Sports Car">
                        </div>
                    </div>
                </section>

                <!--CONTACT US-->
                <section class="contact-section" id="contact">
                    <div class="section-content">
                        <div class="contact-info">
                            <h2 class="section-title">CONTACT US</h2>
                            <p>Contact us for inquiries or assistance!</p>
                            <p>📍 Biglang Awa, Caloocan City</p>
                            <p>📞 Phone: 09061402847</p>
                            <p>📧 Email: dmcars@gmail.com</p>
                            <p>🌐 Website: dmcars.com</p>
                            <p>We look forward to serving you!</p>
                            <img src="~/images/car.png" alt="Car Image" class="car-image-contact">
                        </div>

                        <div class="contact-form">
                            <form action="#">
                                <label for="name">Name</label>
                                <input type="text" id="name" placeholder="Enter your name" required>

                                <label for="email">Email</label>
                                <input type="email" id="email" placeholder="Enter your email" required>

                                <label for="phone">Phone Number</label>
                                <input type="tel" id="phone" placeholder="Enter your phone number" required>

                                <label for="message">Message</label>
                                <textarea id="message" placeholder="Write your message" required></textarea>

                                <button type="submit">Submit</button>
                            </form>
                        </div>
                    </div>
                </section>

                <!--VIEW CARS-->


                <!--LOGIN-->
                <section class="login-section" id="login">
                    <div class="left-section">
                        <h1>DM Online Car Rental</h1>
                        <button>Learn More</button>
                        <img src="~/images/car.png" alt="Car" class="car-image-login">
                    </div>
                    <div class="login-container">
                        <h2 class="login-title">Login</h2>
                        <form action="/login" method="post" class="login-form">
                            <div class="input-group">
                                <label for="username">Username</label>
                                <input type="text" id="username" name="username" required>
                            </div>
                            <div class="input-group">
                                <label for="password">Password</label>
                                <input type="password" id="password" name="password" required>
                            </div>
                            <button type="submit" class="login-button">Login</button>
                        </form>
                        <p class="signup-link">Don’t have an account? <a href="/signup">Sign up here</a></p>
                    </div>
                </section>

            </main>
        </body>
<script src="~/js/script.js"></script>

        </html>



